<html lang="en">

<head>
  <link rel='shortcut icon' type="image/png" href='/img/title/icon-shop.png' />
  <title>Quên mật khẩu</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />

  <link rel="stylesheet" href="/css/style_login.css" />

</head>

<body
  style="background-image: url(/img/background/greenery-product-background_53876-90824.jpg); background-size: cover;">
  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-5">
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
          <div class="login-wrap p-4 p-md-5" style="border-radius: 15px;">
            <div class="d-flex">

              <div class="w-100">

                <h3 class="mb-4 text-center">Quên mật khẩu</h3>

              </div>
            </div>

            {{#if message}}
            <div class="alert alert-success" role="alert">
              {{message}}
            </div>
            {{/if}}

            {{#if error}}
            <div class="alert alert-warning" role="alert">
              {{error}}
            </div>
            {{/if}}

            <form method="POST" action="/forgot-password">

              <div class="form-group">
                <div class="icon d-flex align-items-center justify-content-center"><i class="fas fa-envelope"
                    style="color: white;"></i>
                </div>
                <input name="email" type="email" class="form-control rounded-left" placeholder="Nhập email của bạn"
                  required />
              </div>

              <div class="form-group d-flex align-items-center mt-4">
                <div class="w-100 d-flex justify-content-center">
                  <button value="Log In" type="submit" class="btn btn-primary rounded submit">Gửi</button>
                </div>
              </div>
              <div class="form-group mt-4">
                <div class="w-100 text-center">
                  <p class="mb-1">Không Có Tài Khoản?
                    <a href="/register">Đăng Kí</a>
                  </p>
                  <p><a href="/login">Đăng nhập</a></p>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

</html>